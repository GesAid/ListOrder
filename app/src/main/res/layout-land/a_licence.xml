<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/zeroDP"
        android:layout_height="match_parent"
        android:layout_weight="@integer/weight2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_licence"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/theme_black"
            android:text="@string/licence_my"
            android:textColor="@color/red_text"
            android:textSize="@dimen/fifteenRadDP" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/zeroDP"
        android:layout_height="match_parent"
        android:layout_weight="@integer/weight2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im_licence"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/theme_black"
            android:src="@drawable/control_byers" />
    </LinearLayout>
</LinearLayout>