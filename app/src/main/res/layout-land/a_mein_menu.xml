<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_black"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_h_up"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zeroDP"
        android:layout_weight="@integer/weight2"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/ll_h_center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zeroDP"
        android:layout_weight="@integer/weight10"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_v_left"
            android:layout_width="@dimen/zeroDP"
            android:layout_height="match_parent"
            android:layout_weight="@integer/weight2"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/ll_v_center"
            android:layout_width="@dimen/zeroDP"
            android:layout_height="match_parent"
            android:layout_weight="@integer/weight15"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_h_center_vert_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_v_center_left"
                    android:layout_width="@dimen/zeroDP"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/weight2"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/bt_new_order"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/twoDP"
                        android:layout_weight="@integer/weight2"
                        android:drawableLeft="@drawable/new_order"
                        android:gravity="center"
                        android:background="@drawable/button_black"
                        android:onClick="onNewOrder"
                        android:text="@string/new_order"
                        android:textColor="@color/red_text"
                        android:layout_gravity="center_horizontal" />

                    <Button
                        android:id="@+id/bt_list_order"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/twoDP"
                        android:layout_weight="@integer/weight2"
                        android:gravity="center"
                        android:drawableLeft="@drawable/order_list"
                        android:background="@drawable/button_black"
                        android:onClick="onOrderList"
                        android:text="@string/order_list"
                        android:textColor="@color/red_text"
                       />

                    <Button
                        android:id="@+id/bt_listclient"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/twoDP"
                        android:layout_weight="@integer/weight2"
                        android:gravity="center"
                        android:drawableLeft="@drawable/client_list"
                    android:drawablePadding="0dp"
                        android:background="@drawable/button_black"
                        android:onClick="onClientList"
                        android:text="@string/client_list"
                        android:textColor="@color/red_text"
                        />

                    <Button
                        android:id="@+id/bt_obmen"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/twoDP"
                        android:layout_weight="@integer/weight2"
                        android:gravity="center"
                        android:drawableLeft="@drawable/obmen"
                        android:background="@drawable/button_black"
                        android:onClick="onConnect"
                        android:text="@string/obmen"
                        android:textColor="@color/red_text"
                        />

                    <Button
                        android:id="@+id/bt_lic"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/twoDP"
                        android:layout_weight="@integer/weight2"
                        android:gravity="center"
                        android:drawableLeft="@drawable/activate"
                        android:background="@drawable/button_black"
                        android:onClick="onLicence"
                        android:text="@string/licence"
                        android:textColor="@color/red_text"
                         />

                    <Button
                        android:id="@+id/bt_f5"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="@integer/weight2"
                        android:gravity="center"
                        android:drawableLeft="@drawable/refresh"
                        android:background="@drawable/button_black"
                        android:onClick="onRefresh"
                        android:text="@string/refresh"
                        android:textColor="@color/red_text"
                         />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_v_center_right"
                    android:layout_width="@dimen/zeroDP"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/twoDP"
                    android:layout_weight="@integer/weight2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageButton2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/twoDP"
                        android:src="@drawable/control_byers" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_v_right"
            android:layout_width="@dimen/zeroDP"
            android:layout_height="match_parent"
            android:layout_weight="@integer/weight2"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_h_down"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zeroDP"
        android:layout_weight="@integer/weight2"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>