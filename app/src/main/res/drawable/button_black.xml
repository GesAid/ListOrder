<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="20dp"/>
            <stroke android:width="@dimen/threeDP" android:color="@color/white" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="45" android:endColor="@color/white"
                android:startColor="@color/white" android:type="linear" />
            <corners android:radius="20dp"  />
            <stroke android:width="@dimen/threeDP" android:color="@color/red_gran" />
        </shape>
    </item>
</selector>