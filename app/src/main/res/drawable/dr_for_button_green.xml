<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/green" />
            <corners android:bottomLeftRadius="20dp" android:topRightRadius="20dp" />
            <stroke android:width="@dimen/threeDP" android:color="@color/green" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="45.0" android:endColor="@color/white" android:startColor="@color/green" android:type="linear" />
            <corners android:bottomLeftRadius="20dp" android:topRightRadius="20dp" />
            <stroke android:width="@dimen/threeDP" android:color="@color/green_white" />
        </shape>
    </item>
</selector>