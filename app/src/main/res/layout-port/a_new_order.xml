<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/theme_black"
        android:orientation="vertical">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TabWidget>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/tab1"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/toast_clientOrg"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:layout_weight="@integer/weight3"
                                android:text="@string/toast_name_client"
                                android:textColor="@color/red_text"
                                android:textSize="17dp" />

                            <Spinner
                                android:id="@+id/t_v_client_info"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:layout_weight="@integer/weight10"
                                android:textColor="@color/red_text"
                                android:textSize="17dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/tv_my_org"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:layout_weight="@integer/weight3"
                                android:text="Организация:"
                                android:textColor="@color/red_text"
                                android:textSize="17dp" />

                            <Spinner
                                android:id="@+id/tv_my_organization"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:layout_weight="@integer/weight10"
                                android:textColor="@color/red_text"
                                android:textSize="17dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/t_v_countOrder"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:layout_weight="@integer/weight3"
                                android:text="Номер заказа:"
                                android:textColor="@color/red_text"
                                android:textSize="17dp" />

                            <TextView
                                android:id="@+id/orderCount"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:layout_weight="@integer/weight3"
                                android:textColor="@color/red_text"
                                android:textSize="17dp"

                                />

                            <TextView
                                android:id="@+id/t_v_dataOrder"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:layout_weight="@integer/weight3"
                                android:text="Дата заказа:"
                                android:textColor="@color/red_text"
                                android:textSize="17dp" />

                            <TextView
                                android:id="@+id/dateOrder"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:layout_weight="@integer/weight3"
                                android:textColor="@color/red_text"
                                android:textSize="17dp"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/tv_date_otgruzki"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_weight="@integer/weight3"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:text="@string/date_of_otgruzki"
                                android:textColor="@color/red_text"
                                android:textSize="17dp" />

                            <TextView
                                android:id="@+id/et_date_otgruzki"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_weight="@integer/weight3"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:background="@drawable/theme_black"
                                android:onClick="showDatePickerDialog"
                                android:textColor="@color/red_text"
                                android:textSize="17dp" />

                            <TextView
                                android:id="@+id/tv_date_dostavki"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_weight="@integer/weight3"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:text="@string/date_of_dostavki"
                                android:textColor="@color/red_text"
                                android:textSize="17dp" />

                            <TextView
                                android:id="@+id/et_date_dostavki"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_weight="@integer/weight3"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:background="@drawable/theme_black"
                                android:inputType="date"
                                android:textColor="@color/red_text"
                                android:textSize="17dp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/tv_dolg"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_weight="@integer/weight2"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:inputType="date"
                                android:text="@string/dolg"
                                android:textColor="@color/red_text"
                                android:textSize="17dp" />

                            <TextView
                                android:id="@+id/et_dolg"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_weight="@integer/weight2"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:inputType="date"
                                android:text="@string/zero"
                                android:textColor="@color/red_text"
                                android:textSize="17dp" />

                            <TextView
                                android:id="@+id/tv_otsrochka"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_weight="@integer/weight3"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:inputType="date"
                                android:text="@string/otsrochka"
                                android:textColor="@color/red_text"
                                android:textSize="17dp" />

                            <TextView
                                android:id="@+id/et_otsrochka"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_weight="@integer/weight2"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:inputType="date"
                                android:text="@string/zero"
                                android:textColor="@color/red_text"
                                android:textSize="17dp" />

                            <TextView
                                android:id="@+id/tv_summa_order"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_weight="@integer/weight3"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:inputType="date"
                                android:text="@string/summa_order"
                                android:textColor="@color/red_text"
                                android:textSize="17dp"
                                android:lines="2"
                                android:minLines="2"
                                android:padding="5dp" />

                            <TextView
                                android:id="@+id/et_summa_order"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_weight="@integer/weight2"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:inputType="date"
                                android:text="@string/zero"
                                android:textColor="@color/red_text"
                                android:textSize="17dp"
                                android:gravity="left" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <Button
                                android:id="@+id/bt_save_order"
                                android:layout_width="@dimen/zeroDP"
                                android:layout_weight="@integer/weight5"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/twoDP"
                                android:background="@drawable/button_black"
                                android:onClick="saveOrder"
                                android:text="@string/save"
                                android:textColor="@color/red_text"
                                android:textSize="17dp"
                                android:layout_gravity="right" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/twoDP"
                                android:text="Детализация заказа:"
                                android:textColor="@color/red_text"
                                android:textSize="17dp" />

                        </LinearLayout>

                        <LinearLayout
                                android:id="@+id/postion_order"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/twoDP"
                            android:orientation="horizontal">
                                <ListView
                                    android:id="@+id/order_list"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/twoDP"
                                    />

                            </LinearLayout>


                    </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/choose_tovar"
                        android:layout_width="@dimen/zeroDP"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/twoDP"
                        android:layout_weight="@integer/weight10"
                        android:background="@drawable/theme_black"
                        android:textColor="@color/red_text"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_input_kol_tovara"
                        android:layout_width="@dimen/zeroDP"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/twoDP"
                        android:layout_weight="@integer/weight2"
                        android:background="@drawable/theme_black"
                        android:inputType="number"
                        android:textColor="@color/red_text"
                        android:textSize="17dp" />

                    <Button
                        android:id="@+id/add_tovar"
                        android:layout_width="@dimen/zeroDP"
                        android:layout_height="match_parent"
                        android:layout_weight="@integer/weight2"
                        android:background="@drawable/button_black"
                        android:onClick="addPositionOrder"
                        android:text="+"
                        android:textColor="@color/red_text"
                        android:textSize="17dp" />

                    <ProgressBar
                        android:id="@+id/progress"
                        android:layout_width="@dimen/zeroDP"
                        android:layout_height="match_parent"
                        android:layout_weight="@integer/weight1"
                        android:indeterminateDrawable="@drawable/spinner_ring"
                        android:indeterminateOnly="true"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zeroDP"
                    android:layout_weight="@integer/weight10"
                    android:orientation="horizontal">

                    <ListView
                        android:id="@+id/tovar_list"
                        android:layout_width="@dimen/zeroDP"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/twoDP"
                        android:layout_weight="@integer/weight5" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/comment_for_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/twoDP"
                    android:background="@drawable/theme_black"
                    android:hint="Написать комментарий к заказу"
                    android:lines="@integer/weight5"
                    android:textColor="@color/red_text"
                    android:textSize="17dp"
                    android:textStyle="italic" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</TabHost>