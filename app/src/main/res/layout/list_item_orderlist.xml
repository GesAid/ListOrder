<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_black"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lv_label_tovar"
        android:layout_width="@dimen/zeroDP"
        android:layout_height="match_parent"
        android:layout_weight="@integer/weight3"
        android:background="@color/red_fill"
        android:padding="10dp"
        android:textColor="@color/red_text"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lv_locallabel_tovar"
        android:layout_width="@dimen/zeroDP"
        android:layout_height="match_parent"
        android:layout_weight="@integer/weight6"

        android:padding="10dp"
        android:textColor="@color/red_text"
        android:textSize="15dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/lv_kolvo_tovar"
        android:layout_width="@dimen/zeroDP"
        android:layout_height="match_parent"
        android:layout_weight="@integer/weight1"
        android:background="@color/red_fill"
        android:padding="10dp"
        android:textColor="@color/red_text"
        android:textSize="13dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lv_cenna_tovar"
        android:layout_width="@dimen/zeroDP"
        android:layout_height="match_parent"
        android:layout_weight="@integer/weight3"
        android:padding="10dp"
        android:textColor="@color/red_text"
        android:textSize="13dp"
        android:textStyle="bold" />

</LinearLayout>